{% extends 'base.html.twig' %}

{% block title %}Hello CategoriaController!{% endblock %}

{% block body %}
	<h1>Listado de categorias</h1>
	
	<table border="5px">
	<tr>
		<th>ID</th>
		<th>Nombre</th>
	</tr>
{% for categoria in categorias %}
	<tr>
		<td>{{ categoria.id }}</td>
		<td>{{ categoria.nombre }}</td>
	</tr>
{% endfor %}
	</table>
{% endblock %}