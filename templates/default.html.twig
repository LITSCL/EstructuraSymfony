{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
	<h1>Estas en Index (Default)</h1>

	{% if app.user and app.user.tipo == "Administrador" %}
		<br/><h1>Bienvenido Administrador</h1>
		<a href="{{ path('usuario_accion_cerrarSesion') }}">Cerrar Sesión</a>
	{% elseif app.user and app.user.tipo == "Cliente"%}
		<br/><h1>Bienvenido Cliente</h1>
		<a href="{{ path('usuario_accion_cerrarSesion') }}">Cerrar Sesión</a>
	{% else %}
		<br><h1>No hay sesiones activas</h1>
	{% endif %}
{% endblock %}
